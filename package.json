{
  "name": "@hm/server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "postinstall": "prisma generate || echo prisma-generate-skipped",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "tsx prisma/seed.ts",
    "purge:old": "tsx scripts/purge_old_templates.ts",
    "reset:templates": "tsx scripts/reset_templates.ts",
    "reset:games": "tsx scripts/reset_games.ts",
    "renew:verifications": "tsx scripts/renew_verifications.ts",
    "test:smoke": "tsx tests/listings.smoke.ts",
    "test:smoke:market": "tsx tests/market.smoke.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "10.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/static": "^7.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/websocket": "^8.2.0",
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "nanoid": "^5.0.7",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "openai": "^6.8.1",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@fastify/rate-limit": "^7.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.12",
    "prisma": "^5.20.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
